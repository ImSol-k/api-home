<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="managerY">

	<!-- 상품 등록 -->
	<insert id="insert" parameterType="ManagerVoY">
		<![CDATA[	
			insert into product
			values(null, #{productName}, {price}, #{category}, #{main_img});
        ]]>
		<selectKey keyProperty="product_no" resultType="int" order="AFTER">
			<![CDATA[
				select last_insert_id();
			]]>
		</selectKey>
	</insert>

	<insert id="insertImg" parameterType="">
		<![CDATA[ 
			insert into images
			values(null, #{product_no}, #{save_name});
		 ]]>
	</insert>
	<!-- 상품 등록 -->

</mapper>